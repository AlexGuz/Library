@{
    ViewBag.Title = "List";
}

<h2>List</h2>


<div id="example">
    <div id="grid"></div>

    <script type="text/x-kendo-template" id="template">
        <div class="tabstrip">
            <ul>
                <li class="k-state-active">
                    Library Storage Unit
                </li>
            </ul>
            <div>
                <div class="units"></div>
            </div>
        </div>

    </script>

    <script>
        $(document).ready(function () {

            dataSource = new kendo.data.DataSource({
                transport: {
                    read: {
                        url: "@Url.Action("GetData")",
                        dataType: "json"
                    },
                    update: {
                        url: "Edit/",
                        dataType: "json",
                        type:"POST"
                    },
                    destroy: {
                        url: "@Url.Action("Delete")",
                        dataType: "json"
                    },
                    create: {
                        url: "@Url.Action("Add")",
                        dataType: "json"
                    },
                    parameterMap: function (data, operation) {
                        debugger;
                        if (operation !== "read" ) {
                            return  JSON.stringify(data) ;
                        }
                    }
                },
                batch: true,
                pageSize: 20,
                schema: {
                    model: {
                        id: "Id",
                        fields: {
                            Id: { editable: false },
                            Name: { type: "string" },
                            Surname: { type: "string" },
                            FoundingDate: { nullable: true }
                        }
                    }
                }
            });

            $("#grid").kendoGrid({
                dataSource: dataSource,
                height: 550,
                //groupable: true,
                sortable: true,
                pageable: false,
                toolbar: ["create"],
                detailTemplate: kendo.template($("#template").html()),
                detailInit: detailInit,
                dataBound: function () {
                    this.expandRow(this.tbody.find("tr.k-master-row").first());
                },
                filterable: {
                    extra: false,
                    operators: {
                        string: {
                            startswith: "Starts with",
                            eq: "Is equal to",
                            neq: "Is not equal to"
                        }
                    }
                },
                columns: [
                    {
                        field: "Id",
                        title: "Registration number"
                    },
                    {
                        field: "Name",
                        title: "Autor Name/Publisher"
                    }, {
                        field: "Surname",
                        title: "Surname"
                    }, {
                        field: "FoundingDate",
                        title: "Founding Date"
                    },
                    { command: ["edit", "destroy"], title: "&nbsp;", width: "250px" }
                ],
                editable: "popup"
            });
        });

        function detailInit(e) {
            var detailRow = e.detailRow;
            detailRow.find(".tabstrip").kendoTabStrip({
                animation: {
                    open: { effects: "fadeIn" }
                }
            });

            detailRow.find(".units").kendoGrid({
                dataSource: {
                    type: "json",
                    transport: {
                        read: "GetDetails/" + e.data.Id
                    },
                    serverPaging: true,
                    serverSorting: true,
                    serverFiltering: true,
                    pageSize: 7

                },
                scrollable: false,
                sortable: true,
                pageable: true,
                columns: [
                    { field: "Title", title: "Edition title ", width: "300px" }
                ]
            });
        }
    </script>

    <style>
        .k-detail-cell .k-tabstrip .k-content {
            padding: 0.2em;
        }

        .employee-details ul {
            list-style: none;
            font-style: italic;
            margin: 15px;
            padding: 0;
        }

            .employee-details ul li {
                margin: 0;
                line-height: 1.7em;
            }

        .employee-details label {
            display: inline-block;
            width: 90px;
            padding-right: 10px;
            text-align: right;
            font-style: normal;
            font-weight: bold;
        }
    </style>

</div>
<div>
    @Html.ActionLink("Save as xml", "SaveToFile", new { fileType = "xml" })
    @Html.ActionLink("Save as txt", "SaveToFile", new { fileType = "txt" })
</div>